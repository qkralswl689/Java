		// Stream<String> strStream = Stream.of(strArr);
		// 또는 
		Stream<String> strStream = Arrays.stream(strArr);
		
		// 위의 식 한줄로 줄인것
		// Stream<String> strStream = Stream.of(new String[] {"a","b","c","d"});
		
